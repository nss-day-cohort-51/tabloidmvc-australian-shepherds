@model TabloidMVC.Models.ViewModels.PostTagFormViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="container pt-5">

    <div class="row justify-content-center">

        <div class="card col-md-12 col-lg-8">

            <h3 class="mt-3 text-primary text-center card-title">Select Tag(s)</h3>

            <form class="mt-5 card-body" asp-action="Create">

                <input asp-for="PostId" type="hidden" class="form-control" />

                <div class="form-group">
                    <label asp-for="TagsSelected" class="control-label">Select Tags</label>
                    <select mulitple="multiple" asp-for="TagsSelected" class="form-control">
                        @foreach (var tag in Model.Tag)
                        {
                            <option value="@tag.Id">@tag.Name</option>
                        }
                    </select>
                    <span asp-validation-for="TagsSelected" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Add Tags" class="btn btn-primary" />
                </div>


            </form>
            <div>
                <a asp-controller="Post" asp-action="Details" asp-route-id="@Model.PostId">Back to List</a>
            </div>

        </div>
    </div>
</div>
<br />



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
